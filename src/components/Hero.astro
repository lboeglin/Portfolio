---
import { useTranslations } from '../i18n/utils';
import { type Lang, defaultLang } from '../i18n/ui';

const currentLang = (Astro.currentLocale || defaultLang) as Lang;
const t = useTranslations(currentLang);
---

<section id="intro" class="mb-20 pt-10">
  <div class="hero bg-base-200 rounded-box p-8">
    <div class="hero-content flex-col lg:flex-row-reverse gap-8">
      <div class="text-center lg:text-left">
        <h1 class="text-5xl font-bold">{t('hero.title')}</h1>
        <p class="py-6 text-xl max-w-2xl">
          {t('hero.text')}
        </p>
        <a href="#projects" class="btn btn-primary">
          {t('hero.button')}
        </a>
      </div>
    </div>
  </div>
</section>
