---
const today = new Date();
const { lang = "fr" } = Astro.props;

const t = {
  fr: { role: "Étudiant BUT 3 Informatique" },
  en: { role: "CS Student (Bachelor's Year 3)" }
};

const text = lang === 'fr' ? t.fr : t.en;
---

<footer class="footer footer-center p-6 bg-base-200 text-base-content rounded mt-auto">
  <div>
    <p class="font-bold text-lg">
      Lohan Boëglin
      <br/>
      <span class="font-normal opacity-70 text-sm">{text.role}</span>
    </p> 
    <p class="text-xs opacity-60">
      Copyright © {today.getFullYear()} - {lang === 'fr' ? "Tous droits réservés" : "All rights reserved"}
    </p>
  </div> 
</footer>